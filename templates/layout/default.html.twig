{% extends 'base.html.twig' %}

{% block body_content %}
    <div>
        <header>
            {{ sonata_page_render_container('header', 'global') }}
            {{ sonata_page_render_container('header') }}
        </header>

        <main>
            {{ sonata_page_render_container('content', 'global') }}
            {{ sonata_page_render_container('content') }}
            {% if content is defined %}
                {{ content|raw }}
            {% elseif block('content') is defined %}
                {{ block('content')|raw }}
            {% endif %}
        </main>

        <footer>
            {{ sonata_page_render_container('footer') }}
            {{ sonata_page_render_container('footer', 'global') }}
        </footer>
    </div>
{% endblock %}
